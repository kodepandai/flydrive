    "@typescript-eslint/parser": "^4.15.2",
    "dotenv": "^8.2.0",
    "eslint": "^7.20.0",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "prettier": "^2.5.1",
    "rollup": "^2.66.1",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^26.5.2",
