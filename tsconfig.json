{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es2022",
    "module": "es2022",
    "lib": ["es2022"],
    "sourceMap": false,
    "outDir": "dist",
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {},
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["**/test/*", "**/dist/*", "**/node_modules/*"]
}
